@page
@model RegisterModel
@{
    ViewData["Title"] = "Register";
}


<div class="container col-4 py-2">
    <div class="accept-policy ter">

        <div>
            <form id="registerForm" asp-route-returnUrl="@Model.ReturnUrl" method="post">
                <h4>فتح حساب مشترك جديد</h4>
                <hr />
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <div class="form-floating py-1">
                    <input asp-for="Input.FullName" class="form-control" aria-required="true" />
                    <label asp-for="Input.FullName"></label>
                    <span asp-validation-for="Input.FullName" class="text-danger"></span>
                </div>
                <div class="form-floating py-1">
                    <input asp-for="Input.Email" class="form-control" aria-required="true" />
                    <label asp-for="Input.Email"></label>
                    <span asp-validation-for="Input.Email" class="text-danger"></span>
                </div>
                <div class="form-floating py-1">
                    <input asp-for="Input.Password" class="form-control" aria-required="true" />
                    <label asp-for="Input.Password"></label>
                    <span asp-validation-for="Input.Password" class="text-danger"></span>
                </div>
                <div class="form-floating py-1">
                    <input asp-for="Input.ConfirmPassword" class="form-control" aria-required="true" />
                    <label asp-for="Input.ConfirmPassword"></label>
                    <span asp-validation-for="Input.ConfirmPassword" class="text-danger"></span>
                </div>
                <div class="form-floating py-1">
                    <input asp-for="Input.PhoneNumber" class="form-control" aria-required="true" />
                    <label asp-for="Input.PhoneNumber"></label>
                    <span asp-validation-for="Input.PhoneNumber" class="text-danger"></span>
                </div>
                <div class="form-floating py-1">
                    <input asp-for="Input.Location" class="form-control" aria-required="true" />
                    <label asp-for="Input.Location"></label>
                    <span asp-validation-for="Input.Location" class="text-danger"></span>
                </div>
                <div class="form-floating py-1">
                    <input asp-for="Input.AccountBalance" class="form-control" aria-required="true" />
                    <label asp-for="Input.AccountBalance">رصيد الحساب بالدولار($)</label>
                    <span asp-validation-for="Input.AccountBalance" class="text-danger"></span>
                </div>

                <button id="registerSubmit" type="submit" class="w-100 btn btn-primary">تسجيل</button>
            </form>
        </div>
    </div>
</div>

@section Scripts {
<partial name="_ValidationScriptsPartial" />
}
